<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_view_profile_doctor"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/cirular_bg"
                android:backgroundTint="@color/blue"
                android:src="@drawable/baseline_person_24"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:backgroundTint="@color/light_blue"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="THÔNG TIN CÁ NHÂN"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:textColor="@color/blue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và Tên:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_ho_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Họ Và Tên"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Sinh:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_ngay_sinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Ngày Sinh"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới Tính:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_gioi_tinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Giới Tính"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Số Điện Thoại"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:minHeight="48dp"
                    android:hint="Email"
                    android:textSize="20dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuyên Khoa:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_chuyen_khoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Chuyên Khoa"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chức Vụ:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_chuc_vu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Chức Vụ"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bằng Cấp:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_bang_cap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Bằng Cấp"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuyên Môn:"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_profile_doctor_chuyen_mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:hint="Chuyên Môn"
                    android:textSize="20dp"
                    android:minHeight="48dp"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/btn_new_profile_doctor"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Mới"
                    android:background="@drawable/round_btn"
                    android:elevation="10dp"/>
                <Button
                    android:id="@+id/btn_update_profile_doctor"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cập Nhập"
                    android:background="@drawable/round_btn"
                    android:elevation="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>