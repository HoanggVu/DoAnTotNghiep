<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời Gian Khám"
                android:layout_gravity="center"
                android:gravity="start" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/light_blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Mới"
                android:textStyle="bold"
                android:layout_marginStart="200dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_thoi_gian_kham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:text="Sun, 17/11/2023 | 10:00"
            android:textColor="@color/blue"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_avt_doctor_calender"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avt"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Bác Sĩ: "/>
                <TextView
                    android:id="@+id/tv_calender_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Nguyễn Hoàng Vũ"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Chuyên Khoa:"/>
                <TextView
                    android:id="@+id/tv_calender_doctor_chuyen_khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam Khoa"
                    android:textColor="@color/blue"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch Vụ Khám: "/>
            <TextView
                android:id="@+id/tv_calender_dich_vu_kham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viêm Bàng Quang"
                android:textColor="@color/blue"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>