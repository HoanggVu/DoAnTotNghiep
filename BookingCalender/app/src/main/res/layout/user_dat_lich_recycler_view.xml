<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/item_user_dat_lich"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời Gian Khám"
                android:layout_gravity="center"
                android:gravity="start" />
            <TextView
                android:id="@+id/tv_user_dat_lich_trang_thai"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/round_btn"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Mới"
                android:textStyle="bold"
                android:layout_marginStart="120dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_dat_lich_ngay_kham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, 17/11/2023"
                android:textColor="@color/blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/blue"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/tv_user_dat_lich_thoi_gian_kham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textColor="@color/blue"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bottom_bg_gradient"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_doctor_user_dat_lich"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_doctor_khoa_user_dat_lich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Phụ Khoa"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/tv_doctor_name_user_dat_lich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Nguyễn Duy Khánh"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/baseline_assignment_24"
                        android:backgroundTint="@color/blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Ngày làm việc"
                        android:textSize="20dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_doctor_ngay_lam_viec_benh_an"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="Mon - Sat"
                    android:textSize="16dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/baseline_assignment_24"
                        android:backgroundTint="@color/blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Thời gian"
                        android:textSize="20dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start">
                    <TextView
                        android:id="@+id/tv_doctor_lich_lam_viec_thoi_gian_bat_dau_user_dat_lich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:gravity="start"
                        android:text="7:00"
                        android:textSize="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_doctor_lich_lam_viec_thoi_gian_ket_thuc_user_dat_lich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="11:00"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch Vụ Khám: "/>
            <TextView
                android:id="@+id/tv_user_dat_lich_dich_vu_kham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viêm Bàng Quang"
                android:textColor="@color/blue"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>