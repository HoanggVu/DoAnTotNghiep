<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Doctor.UpdateProfileDoctorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_view_update_profile_doctor"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/cirular_bg"
            android:backgroundTint="@color/blue"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>
        <ImageButton
            android:id="@+id/img_search_image_doctor_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_search_24"
            app:tint="@color/blue"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_rounded_corner"
            android:elevation="5dp"
            android:backgroundTint="@color/light_blue"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="THÔNG TIN CÁ NHÂN"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và Tên:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_ho_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Họ Và Tên"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_ngay_sinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Ngày Sinh"
                android:inputType="date"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_gioi_tinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Giới Tính"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Điện Tính:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Số Điện Thoại"
                android:inputType="phone"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên Khoa:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_chuyen_khoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Chuyên Khoa"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chức Vụ:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_chuc_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Chức Vụ"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bằng Cấp:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_bang_cap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Bằng Cấp"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên Môn:"
                android:layout_margin="15dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/edt_profile_doctor_chuyen_mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                android:hint="Chuyên Môn"
                android:inputType="text"
                android:textSize="20dp"
                android:minHeight="48dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btn_accept_update_profile_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác Nhận"
                android:background="@drawable/round_btn"
                android:elevation="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>